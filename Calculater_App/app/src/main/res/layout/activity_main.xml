<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/editbox"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="30sp"
            android:maxLength="15"
            tools:text="0" />

        <Button
            android:id="@+id/square"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/asin"
            android:onClick="square"
            android:layout_marginBottom="5dp"
            android:text="x²" />


        <Button
            android:id="@+id/root"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/acos"
            android:layout_toRightOf="@id/square"
            android:onClick="root"
            android:layout_marginBottom="5dp"
            android:text="√" />

        <Button
            android:id="@+id/power"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/atan"
            android:layout_toRightOf="@id/root"
            android:onClick="power"
            android:layout_marginBottom="5dp"
            android:text="xʸ" />

        <Button
            android:id="@+id/x10"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/square"
            android:onClick="x10"
            android:layout_marginBottom="5dp"
            android:text="X10" />
        <Button
            android:id="@+id/exp"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/root"
            android:layout_toRightOf="@id/x10"
            android:onClick="exp"
            android:layout_marginBottom="5dp"
            android:text="Exp" />
        <Button
            android:id="@+id/log"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/power"
            android:layout_toRightOf="@id/exp"
            android:onClick="log"
            android:layout_marginBottom="5dp"
            android:text="log" />

        <Button
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/radiogroup"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/tan"
            android:onClick="back"
            android:text="⌫" />

        <Button
            android:id="@+id/divide"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/back"
            android:layout_toRightOf="@id/tanh"
            android:layout_marginBottom="3dp"
            android:onClick="btndivideClicked"
            android:text="/" />

        <Button
            android:id="@+id/sine"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/radiogroup"
            android:layout_marginBottom="3dp"
            android:onClick="sine"
            android:text="sin" />

        <Button
            android:id="@+id/cos"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/radiogroup"
            android:layout_toRightOf="@+id/sine"
            android:layout_marginBottom="3dp"
            android:onClick="cons"
            android:text="cos" />

        <Button
            android:id="@+id/tan"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/radiogroup"
            android:layout_toRightOf="@+id/cos"
            android:layout_marginBottom="3dp"
            android:onClick="tan"
            android:text="tan" />
        <Button
            android:id="@+id/sinh"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sine"
            android:layout_marginBottom="3dp"
            android:onClick="sinh"
            android:text="sinh" />
        <Button
            android:id="@+id/cosh"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/cos"
            android:layout_toRightOf="@+id/sinh"
            android:layout_marginBottom="3dp"
            android:onClick="cosh"
            android:text="cosh" />
        <Button
            android:id="@+id/tanh"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sine"
            android:layout_toRightOf="@+id/cosh"
            android:layout_marginBottom="3dp"
            android:onClick="tanh"
            android:text="tanh" />

        <Button
            android:id="@+id/asin"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sinh"
            android:layout_marginBottom="3dp"
            android:onClick="asin"
            android:text="Asin" />
        <Button
            android:id="@+id/acos"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/cosh"
            android:layout_toRightOf="@+id/asin"
            android:layout_marginBottom="3dp"
            android:onClick="acos"
            android:text="acos" />
        <Button
            android:id="@+id/atan"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tanh"
            android:layout_toRightOf="@+id/acos"
            android:layout_marginBottom="3dp"
            android:onClick="atan"
            android:text="atan" />

        <Button
            android:id="@+id/Btn7_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/x10"
            android:onClick="btn7Clicked"
            android:text="7" />

        <Button
            android:id="@+id/Btn8_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/exp"
            android:layout_toRightOf="@id/Btn7_id"
            android:onClick="btn8Clicked"
            android:text="8" />

        <Button
            android:id="@+id/Btn9_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/log"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/Btn8_id"
            android:onClick="btn9Clicked"
            android:text="9" />

        <Button
            android:id="@+id/multi"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/divide"
            android:layout_toRightOf="@id/atan"
            android:onClick="btnmultiClicked"
            android:layout_marginBottom="3dp"
            android:text="X" />

        <Button
            android:id="@+id/Btn4_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn7_id"
            android:layout_marginLeft="10dp"
            android:onClick="btn4Clicked"
            android:text="4" />

        <Button
            android:id="@+id/Btn5_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn8_id"
            android:layout_toRightOf="@id/Btn4_id"
            android:layout_marginLeft="20dp"
            android:onClick="btn5Clicked"
            android:text="5" />

        <Button
            android:id="@+id/Btn6_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn9_id"
            android:layout_toRightOf="@id/Btn5_id"
            android:layout_marginLeft="20dp"
            android:onClick="btn6Clicked"
            android:text="6" />

        <Button
            android:id="@+id/Btnplus_id"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/multi"
            android:layout_toRightOf="@id/power"
            android:layout_marginBottom="3dp"
            android:onClick="btnplusClicked"
            android:text="+" />

        <Button
            android:id="@+id/Btn1_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn4_id"
            android:layout_marginLeft="10dp"
            android:onClick="btn1Clicked"
            android:text="1" />

        <Button

            android:id="@+id/Btn2_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn5_id"
            android:layout_toRightOf="@id/Btn1_id"
            android:layout_marginLeft="20dp"
            android:onClick="btn2Clicked"
            android:text="2" />

        <Button
            android:id="@+id/Btn3_id"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn6_id"
            android:layout_toRightOf="@id/Btn2_id"
            android:layout_marginLeft="20dp"
            android:onClick="btn3Clicked"
            android:text="3" />

        <Button
            android:id="@+id/Btnminus_id"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btnplus_id"
            android:layout_toRightOf="@id/log"
            android:layout_marginBottom="3dp"
            android:onClick="btnminusClicked"
            android:text="-" />

        <Button
            android:id="@+id/clear"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn1_id"
            android:onClick="btnclearClicked"
            android:layout_marginLeft="10dp"
            android:text="C" />

        <Button
            android:id="@+id/dzero"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn1_id"
            android:layout_toRightOf="@id/zero"
            android:onClick="dzeroclicked"
            android:layout_marginLeft="20dp"
            android:text="00" />

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btn1_id"
            android:layout_toRightOf="@id/clear"
            android:layout_marginLeft="20dp"
            android:onClick="btn0Clicked"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btnminus_id"
            android:layout_toRightOf="@id/Btn9_id"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="3dp"
            android:onClick="dot"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_below="@id/dot"
            android:layout_toRightOf="@+id/Btn6_id"
            android:layout_marginLeft="9dp"
            android:onClick="btnequalClicked"
            android:text="=" />


        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editbox"
            android:checkedButton="@id/deg_radio"
            android:layout_margin="10dp"
            >

            <RadioButton
                android:id="@+id/deg_radio"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="DEG" />

            <RadioButton
                android:id="@+id/radian_radio"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="RAD" />

        </RadioGroup>


    </RelativeLayout>
</ScrollView>